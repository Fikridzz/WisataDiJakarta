<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/framewisata">

    <ImageView
        android:id="@+id/imgTraffic"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/traffic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"/>

    <Button
        android:id="@+id/btnExploreJakarta"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imgTraffic"
        android:layout_marginTop="110dp"
        android:background="@drawable/ic_button" />
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/isi"
        android:layout_below="@id/btnExploreJakarta"
        android:layout_marginTop="10dp"/>


</RelativeLayout>